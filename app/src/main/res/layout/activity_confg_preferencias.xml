<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_background"
    tools:context=".pagesLogin.ConfgPreferencias">

    <include
        layout="@layout/action_bard_default"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView4"
                style="@style/textviewGeneral"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/preferencias"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                style="@style/textviewGeneral"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/sonido"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/btSonidoActivar"
                style="@style/BotonPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activado"
                android:textAlignment="viewStart" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/btSonidoDesactivar"
                style="@style/BotonPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desactivado"
                android:textAlignment="viewStart" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textVie"
            style="@style/textviewGeneral"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/idiomas"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text"
            style="@style/textviewGeneral"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/cambiarIdioma"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Spinner
            android:id="@+id/spinnerIdioma"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_rounded"
            android:popupBackground="@drawable/style_spinner_items_container"
            android:layout_height="60dp"
            android:paddingHorizontal="9dp"/>



    </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>