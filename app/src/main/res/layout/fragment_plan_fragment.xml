<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_background"
    tools:context=".pages.fragmenthomepage.PlanFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/textviewGeneral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/menus"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textviewGeneral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/elegirMenu"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerMenuSeleccionado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:background="#696B68"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_arrow_back"
                            android:background="@drawable/image_button_style1"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="370dp"
                            android:layout_marginHorizontal="5dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/ivMenuSeleccionado"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/menu1" />

                        </androidx.cardview.widget.CardView>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_arrow_forward"
                            android:background="@drawable/image_button_style1"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/textviewGeneral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ejercicioTitle"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textviewGeneral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/elegirEjercico"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerEjercicioSeleccionado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:background="#696B68"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_arrow_back"
                            android:background="@drawable/image_button_style1"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="370dp"
                            android:layout_marginHorizontal="5dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/ivEjercicioSeleccionado"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/menu1" />

                        </androidx.cardview.widget.CardView>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_arrow_forward"
                            android:background="@drawable/image_button_style1"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</FrameLayout>