<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degraded_background_green"
    tools:context=".pagesLogin.CrearCuenta">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/action_bard_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="28">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_nombreLogin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/edittext_rounded"
                    android:drawableStart="@drawable/generic_vector"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="@string/nameHint"
                    android:inputType="text|textAutoCorrect"
                    android:onClick="limpiarErrores"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

                <TextView
                    android:id="@+id/lbNameError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:shadowColor="@color/grayInfo"
                    android:shadowDx="0"
                    android:shadowDy="-0.2"
                    android:shadowRadius="0.2"
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/baseline_error" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="28">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_apellidoLogin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/edittext_rounded"
                    android:drawableStart="@drawable/generic_vector"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="@string/AppellidoHint"
                    android:inputType="text|textAutoCorrect"
                    android:onClick="limpiarErrores"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

                <TextView
                    android:id="@+id/lbApellidoError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:shadowColor="@color/grayInfo"
                    android:shadowDx="0"
                    android:shadowDy="-0.2"
                    android:shadowRadius="0.2"
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/baseline_error" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_mailLogin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/edittext_rounded"
                    android:drawableStart="@drawable/baseline_email"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="@string/emailHint"
                    android:inputType="text"
                    android:onClick="limpiarErrores"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

                <TextView
                    android:id="@+id/lbEmailError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:shadowColor="@color/grayInfo"
                    android:shadowDx="0"
                    android:shadowDy="-0.2"
                    android:shadowRadius="0.2"
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/baseline_error" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#4CAF50">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_passLogin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/edittext_rounded"
                    android:drawableStart="@drawable/baseline_key"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="@string/passwordHint"
                    android:inputType="textPassword"
                    android:onClick="limpiarErrores"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

                <TextView
                    android:id="@+id/lbPasswordInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:shadowColor="#656161"
                    android:shadowDx="0"
                    android:shadowDy="-0.2"
                    android:shadowRadius="0.2"
                    android:text="@string/errorPass"
                    android:textColor="@color/grayInfo" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_passLogin2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_rounded"
                android:drawableStart="@drawable/baseline_key"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="@string/passwordHint"
                android:inputType="textPassword"
                android:onClick="limpiarErrores"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <Button
                android:id="@+id/bt_crearCuenta"
                style="@style/BotonPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="registro"
                android:text="@string/crearCuenta" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>