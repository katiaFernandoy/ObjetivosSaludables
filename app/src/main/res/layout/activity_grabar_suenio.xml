<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.HomePages.GrabarSuenio">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/second_background"
        tools:context=".pages.fragmenthomepage.HomeFragment"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="58dp">

        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="35dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <include layout="@layout/action_bard_default" />

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:src="@drawable/erizo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:id="@+id/llHorasSuenio"
                style="@style/container_info_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        style="@style/textviewGeneral"
                        android:layout_width="246dp"
                        android:layout_height="45dp"
                        android:text="@string/suenioHoy"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/horasSuenio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number|numberDecimal"
                        android:onClick="grabarSuenio" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:id="@+id/llPuntuacionSuenio"
                style="@style/container_info_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textviewGeneral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Puntuacion"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvResultadoSuenio"
                        style="@style/textviewGeneral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivResultadoSuenio"
                    android:layout_width="73dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:src="@drawable/feliz" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:id="@+id/llSuenio"
                style="@style/container_info_settings"
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textviewGeneral"
                        android:layout_width="305dp"
                        android:layout_height="wrap_content"
                        android:text="@string/humorEsperado"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvResultAnalisis"
                        style="@style/textviewGeneral"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:text=""
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:id="@+id/l"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:id="@+id/tvMediaSemanal"
                style="@style/container_info_settings"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:orientation="horizontal"
                android:textAlignment="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="75dp">

                    <TextView
                        android:id="@+id/tvAnalisisSuenio"
                        style="@style/textviewGeneral"
                        android:layout_width="232dp"
                        android:layout_height="55dp"
                        android:text="@string/mediaSemanal"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/horasMediaSemana"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="number|numberDecimal" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>